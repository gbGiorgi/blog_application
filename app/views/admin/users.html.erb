<div class="container">
  <h1 class="text-center">Administrator</h1>
  <%= render 'admin/nav_links' %>

  <table class="table table-dark table-striped">
    <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Views</th>
      <th scope="col">Role</th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <th scope="row"><%= user.id %></th>
        <th><%= user.name %></th>
        <th><%= link_to user.email, admin_user_path(user.id) %></th>
        <th><%= user.views %></th>
        <th><%= user.role %></th>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
<style>
    .container {
        background-color: wheat;
        margin-top: 5%;
        border-radius: 15px;
        text-align: center;
        padding-bottom: 1%;
        padding-top: 1%;
    }
</style>