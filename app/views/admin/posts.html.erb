<div class="container">
  <div class="card-header">
    <h1 class="text-center">Administrator</h1>
  </div>
  <%= render 'admin/nav_links' %>
    <table class="table table-dark table-striped">
      <thead>
        <tr>
          <th scope="col">Id</th>
          <th scope="col">Post</th>
          <th scope="col">Author</th>
          <th scope="col">Comments</th>
          <th scope="col">Approve</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <th scope="row"><%= post.id %></th>
            <td><%= link_to post.title.truncate(15), admin_post_path(post) %></td>
            <td><%= post.user.name %></td>
            <td><%= pluralize(post.comments.size, "Comment") %></td>
            <td><%= post.approve %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
<style>
  .container {
      background-color: wheat;
      margin-top: 5%;
      border-radius: 15px;
      text-align: center;
      padding-bottom: 1%;
      padding-top: 1%;
  }
</style>