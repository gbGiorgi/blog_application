<div class="container">
  <%= render @post %>
  <div>
    <% if @post.user != current_user %>
      <%= link_to t(:back_to_posts), posts_path %>
    <% else %>
      <%= link_to t(:edit_this_post), edit_post_path(@post) %>
      <%= link_to t(:back_to_posts), posts_path %>
      <%= button_to t(:destroy_this_post), @post, method: :delete %>
    <% end %>
  </div>
</div>
<div class="container">
  <%= render 'comments/form',
    post: @post,
    comment: @post.comments.build,
    submit_label: t(:reply) %>
  <% @comments.each do |comment| %>
    <%= render 'comments/comment',
    post: @post,
    comment: comment %>
  <% end %>
</div>

<%= will_paginate @comments, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
