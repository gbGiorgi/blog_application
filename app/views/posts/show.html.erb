<div class="container">
  <%= render @post %>
  <div>
    <% if @post.user != current_user %>
      <%= link_to t("Back to posts"), posts_path %>
    <% else %>
      <%= link_to t("Edit this post"), edit_post_path(@post) %>
      <%= link_to t("Back to posts"), posts_path %>
      <%= button_to t("Destroy this post"), @post, method: :delete %>
    <% end %>
  </div>
</div>
<div class="container">
  <%= render 'comments/form',
    post: @post,
    comment: @post.comments.build,
    submit_label: t("Reply") %>
  <% @comments.each do |comment| %>
    <%= render 'comments/comment',
    post: @post,
    comment: comment %>
  <% end %>
</div>

<%= will_paginate @comments, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
