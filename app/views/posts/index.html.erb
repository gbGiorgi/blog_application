<div class="container">
    <h1>Posts</h1>

    <div id="posts">
      <% @posts.each do |post| %>
        <%= render post %>
        <p>
          <%= link_to t("Show this post"), post %>
        </p>
      <% end %>
    </div>

    <%= link_to t("New post"), new_post_path %>
</div>

<%= will_paginate @posts, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
