<% if current_user %>
  <li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
      <%= current_user.name %>
    </a>
    <ul class="dropdown-menu dropdown-menu-lg-end" aria-labelledby="navbarDropdown">
      <li><%= link_to t(:admin), admin_path, class: "dropdown-item" if current_user.admin? %></li>
      <li><%= link_to "New Category", new_category_path, class: "dropdown-item" if current_user.admin?%></li>
      <li><%= link_to t(:new_post), new_post_path, class: "dropdown-item" %></li>
      <li><%= link_to t(:edit_Account), edit_user_registration_path, class: "dropdown-item" %></li>
      <li><hr class="dropdown-divider"></li>
      <li><%= button_to t(:sign_out), destroy_user_session_path, method: :delete, class: "dropdown-item" %></li>
    </ul>
  </li>
<% else %>
  <li class="nav-item">
    <%= link_to t(:sign_up), new_user_registration_path, class: "nav-link" %>
  </li>
  <li class="nav-item">
    <%= link_to t(:login), new_user_session_path, class: "nav-link" %>
  </li>
<% end %>
